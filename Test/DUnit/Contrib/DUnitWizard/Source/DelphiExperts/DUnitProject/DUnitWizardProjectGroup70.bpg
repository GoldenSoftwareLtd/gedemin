MAKE = $(ROOT)\bin\make.exe -$(MAKEFLAGS) -f$**
DCC = $(ROOT)\bin\dcc32.exe $**
BRCC = $(ROOT)\bin\brcc32.exe $**
#------------------------------------------------------------------------------
PROJECTS = EPCCommon70.bpl EPCOTAUtils70.bpl EPCDUnitWizard70.bpl \
  EPCDUnitWizardTests.exe WizardFormsDemo.exe 
