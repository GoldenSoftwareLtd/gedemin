<project name="xpgen"
  default="test" 
  basedir=".">
 
  <target name="compile" >
    <dcc source="*.dpr"
         dcuoutput="${scratch.dir}"
         exeoutput="${bin.dir}"
         debug="true"
         build="true"
         uselibrarypath="yes"
         console="yes"
    >
      <unitpath path="${src.dir}" />
      <resourcepath path="${src.dir}" />
    </dcc>
  </target>
  
  <target name="test" depends="compile" >
    <dunit testlib="${bin.dir}/testXpgenLib.dll" />
  </target>

</project>
